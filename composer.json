{
    "name": "purple/code-challenge",
    "license": "MIT",
    "scripts": {
        "start": "php src/public/index.php",
        "test": "phpunit --testdox tests",
        "code-style": "phpcs --ignore=*/vendor/* --standard=PSR12 /app",
        "analyse-code": "phpstan analyse src tests"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ivan Maltsev",
            "email": "ivan.maltsev.php@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9"
    }
}
